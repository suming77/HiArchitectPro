<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hiui" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--全局生效-->
        <item name="navigationStyle">@style/navigationStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <!--APP启动白屏优化->此模式仅应用于Application，进入MainActivity后需要使用上面的Themes-->
    <style name="launchThemes" parent="Theme.Hiui">
        <item name="android:windowBackground">@drawable/launch_splash</item>
    </style>
</resources>